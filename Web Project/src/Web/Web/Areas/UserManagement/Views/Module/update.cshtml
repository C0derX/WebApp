@model ModuleDto 
@{

 }

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
               
                <h4 class="card-title">Module Update form   <a href="/UserManagement/Module" class="badge badge-primary float-right"><i class="mdi mdi-arrow-left"></i> Back</a></h4>
                <form method="post" action="/UserManagement/Module/Update">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(a => a.Id)
                    <div class=" row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(a => a.name)
                                @Html.TextBoxFor(a => a.name, new { @class = "form-control", @placeholder = "Eg. User Management" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.name)</p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(a => a.code)
                                @Html.TextBoxFor(a => a.code, new { @class = "form-control", @placeholder = "Eg. Account" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.code)</p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(a => a.module_key)
                                @Html.DropDownListFor(a => a.module_key,new SelectList(Enum.GetValues(typeof(Core.Common.Enums.ModuleKey))), new { @class = "form-control", @placeholder = "Eg. Account" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.code)</p>
                            </div>
                            
                            <div class="form-group">
                                @Html.LabelFor(a => a.display_icon)
                                @Html.TextBoxFor(a => a.display_icon, new { @class = "form-control", @placeholder = "Eg. fa fa-user" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.display_icon)</p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(a => a.display_order)
                                @Html.TextBoxFor(a => a.display_order, new { @class = "form-control", @placeholder = "Eg. 1,2,3" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.display_order)</p>
                            </div>
                        </div>
                        <div class="col-md-6">

                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a href="/UserManagement/Module" class="btn btn-danger">Cancel</a>
                </form>
            </div>
        </div>
    </div>
   
</div>