@model ModuleIndexViewModel
@{

}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Modules</h4>
                <p class="card-description">
                    <a href="/UserManagement/Module/Create" class="btn btn-rounded btn-primary btn-sm"><i class="mdi mdi-plus-circle mdi-18px"></i> New Module</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Module Name</th>
                                <th>Code</th>
                                <th>Display Icon</th>
                                <th>Created Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model.moduleDetails)
                                {
                                    <tr>
                                        <td>@item.name</td>
                                        <td>@item.code</td>
                                        <td><i class="@item.display_icon"></i></td>
                                        <td>@item.created_date.ToString()</td>
                                        <td>
                                            <div>
                                                <button class="btn btn-primary" type="button" id="dropdownMenuIconButton6" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="mdi mdi-security"></i>
                                                </button>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuIconButton6" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 38px, 0px);">
                                                    <a class="dropdown-item" href="/UserManagement/Module/Update/@item.Id"><i class="mdi mdi-account-edit"></i> Edit</a>
                                                    <div class="dropdown-divider"></div>
                                                    <a class="dropdown-item delete" href="/UserManagement/Module/Delete/@item.Id"><i class="mdi mdi-delete"></i> Delete</a>
                                                  
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <Pagination info="@ViewBag.pagerInfo"></Pagination>
            </div>
        </div>
    </div>
</div>
