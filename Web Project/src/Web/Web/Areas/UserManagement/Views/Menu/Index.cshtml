@model MenuIndexViewModel
@{

}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Menu</h4>
                <p class="card-description">
                    <a href="/UserManagement/Menu/Create" class="btn btn-rounded btn-primary btn-sm"><i class="mdi mdi-plus-circle mdi-18px"></i> New Menu</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Menu Name</th>
                                <th>Module</th>
                                <th>Display Icon</th>
                                <th>Web Url</th>
                                <th>Api Url</th>
                                <th>Created Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model.menuDetails)
                                {
                                                        <tr>
                                                            <td>@item.name</td>
                                                            <td>@item.Modules.name</td>
                                                            <td><i class="@item.display_icon"></i></td>
                                                            <td>@item.web_url</td>
                                                            <td>@item.api_url</td>
                                                            <td>@item.created_date.ToString()</td>
                                                            @{
                                                                string badgeType = "badge-success";
                                                                string status = "Active";
                                                                if (!item.is_active)
                                                                {
                                                                    badgeType = "badge-danger";
                                                                    status = "Inactive";
                                                                }

                                                            }
                                                            <td><label class="badge @badgeType">@status</label></td>
                                                            <td>
                                                                <div>
                                                                    <button class="btn btn-primary" type="button" id="dropdownMenuIconButton6" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                        <i class="mdi mdi-security"></i>
                                                                    </button>
                                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuIconButton6" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 38px, 0px);">
                                                                        <a class="dropdown-item" href="/UserManagement/Menu/Update/@item.Id"><i class="mdi mdi-account-edit"></i> Edit</a>
                                                                        <div class="dropdown-divider"></div>
                                                                        <a class="dropdown-item delete" href="/UserManagement/Menu/Delete/@item.Id"><i class="mdi mdi-delete"></i> Delete</a>
                                                                        <div class="dropdown-divider"></div>
                                                                        @{
                                                                            if (item.is_active)
                                                                            {
                                                                                <a class="dropdown-item " href="/UserManagement/Menu/Disable/@item.Id"><i class="mdi mdi-thumb-down"></i> Disable</a>
                                                                            }
                                                                            else
                                                                            {
                                                                                <a class="dropdown-item " href="/UserManagement/Menu/Enable/@item.Id"><i class="mdi mdi-thumb-up"></i> Enable</a>
                                                                            }
                                                                        }


                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <Pager info="@ViewBag.pagerInfo"></Pager>
            </div>
        </div>
    </div>
</div>
