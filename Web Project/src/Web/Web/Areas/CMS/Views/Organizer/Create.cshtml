
@model OrganizerDto
@{

}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Organizer Entry Form  <a href="/cms/organizer" class="badge badge-primary float-right"><i class="mdi mdi-arrow-left"></i> Back</a></h4>
                <form method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class=" row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(a => a.orgname)
                                @Html.TextBoxFor(a => a.orgname, new { @class = "form-control" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.orgname)</p>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(a => a.orgaddress)
                                @Html.TextBoxFor(a => a.orgaddress, new { @class = "form-control" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.orgaddress)</p>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(a => a.org_phone_no)
                                @Html.TextBoxFor(a => a.org_phone_no, new { @class = "form-control", @type = "number" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.org_phone_no)</p>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(a => a.orgemail)
                                @Html.TextBoxFor(a => a.orgemail, new { @class = "form-control", @type = "email" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.orgemail)</p>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a href="/cms/organizer" class="btn btn-danger">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

