
@model SeminarDto
@{

}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Seminar Entry Form  <a href="/cms/seminar" class="badge badge-primary float-right"><i class="mdi mdi-arrow-left"></i> Back</a></h4>
                <form method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class=" row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(a => a.title)
                                @Html.TextBoxFor(a => a.title, new { @class = "form-control" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.title)</p>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(a => a.date)
                                @Html.TextBoxFor(a => a.date, new { @class = "form-control", @type = "date" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.date)</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(a => a.org_id)
                                @Html.DropDownListFor(a => a.org_id, (SelectList)ViewBag.organization, "Select Organizer", new { @class = "form-control" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.org_id)</p>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(a => a.description)
                                @Html.TextAreaFor(a => a.description, new { @class = "form-control", @rows = "3" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.description)</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(a => a.types)
                                @Html.DropDownListFor(a => a.types, new SelectList(Enum.GetValues(typeof(Core.Common.Enums.types))), "Select Types", new { @class = "form-control", @placeholder = "Types" })
                                <p class="text-danger">@Html.ValidationMessageFor(a => a.types)</p>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a href="/cms/seminar" class="btn btn-danger">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

