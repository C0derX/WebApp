<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>CMS</title>
    <link href="~/Administrator/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/Administrator/vendors/feather/feather.css" rel="stylesheet" />
    <link href="~/Administrator/vendors/css/vendor.bundle.base.css" rel="stylesheet" />
    <link href="~/Administrator/css/style.css" rel="stylesheet" />
    <link href="~/Administrator/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Administrator/vendors/select2/select2.min.css" rel="stylesheet" />
    <link href="~/Administrator/vendors/select2-bootstrap-theme/select2-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Administrator/css/pagination.css" rel="stylesheet" />

    <link rel="shortcut icon" href="~/favicon.ico" />
    <style>
        .image-preview {
            height: 175px;
            width: 175px;
            margin-left: 180px;
        }
    </style>
</head>

<body>
    <div class="container-scroller">
        @await Component.InvokeAsync("AdminHeaderView")
        <div class="container-fluid page-body-wrapper">
            <div class="main-panel">
                <div class="content-wrapper">
                    @Html.Partial("message")
                    @RenderBody()
                </div>

                <footer class="footer">
                    <div class="w-100 clearfix">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © 2021 <a href="#" target="_blank"></a>. All rights reserved.</span>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <script src="~/Administrator/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/Administrator/js/off-canvas.js"></script>
    <script src="~/Administrator/js/hoverable-collapse.js"></script>
    <script src="~/Administrator/js/template.js"></script>
    <script src="~/Administrator/js/settings.js"></script>
    <script src="~/Administrator/js/todolist.js"></script>
    <script src="~/Administrator/vendors/flot/jquery.flot.js"></script>
    <script src="~/Administrator/vendors/flot/jquery.flot.resize.js"></script>
    <script src="~/Administrator/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Administrator/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="~/Administrator/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/Administrator/vendors/sweetalert/sweetalert.min.js"></script>
    <script src="~/Administrator/vendors/jquery.avgrund/jquery.avgrund.min.js"></script>
    <script src="~/Administrator/js/alerts.js"></script>
    <script src="~/Administrator/js/avgrund.js"></script>
    <script src="~/Administrator/js/dashboard.js"></script>
    <script src="~/Administrator/js/todolist.js"></script>
    <script src="~/Administrator/vendors/select2/select2.min.js"></script>
    <script src="~/Administrator/js/select2.js"></script>
    <script src="~/Administrator/js/pagination-helper.min.js"></script>

    <script>

        $(document).ready(function () {
            $(".delete").click(function (e) {
                if (!confirm("Are you sure to delete?")) {
                    return false;
                }
            });

            $("#selectLanguage").change(function () {

                $("#selectLanguage").submit();

            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>